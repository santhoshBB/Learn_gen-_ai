{
  "defaults": {
    "llm": "gemma2:2b",
    "embedding": "nomic-embed-text"
  },

  "llms": {
    "gpt-4o-mini": {
      "provider": "openai",
      "type": "remote",
      "api_key_env": "OPENAI_API_KEY",
      "base_url": "https://api.openai.com/v1"
    },
    "mistral-7b-instruct-v0.2": {
      "provider": "local",
      "type": "local",
      "url": "http://localhost:11434/v1"
    },
    "gemma2:2b": {
      "provider": "local",
      "type": "local",
      "url": "http://localhost:11434/v1"
    }
  },

  "embeddings": {
    "text-embedding-3-small": {
      "provider": "openai",
      "type": "remote",
      "api_key_env": "OPENAI_API_KEY",
      "base_url": "https://api.openai.com/v1"
    },
    "nomic-embed-text": {
      "provider": "local",
      "type": "local",
      "url": "http://localhost:8000/embed"
    }
  },

  "databases": {
    "qdrant": {
      "url": "http://localhost:6333",
      "collection": "ingested_files"
    },
    "mongo": {
      "url": "mongodb://localhost:27017"
    },
    "neo4j": {
      "url": "bolt://localhost:7687",
      "user": "neo4j",
      "password_env": "NEO4J_PASSWORD"
    }
  },
  "rag-config":{
    "collections":{
      "combined-ingest":{
        "files":["nodejs.pdf", "FAQ_on_BC.pdf", "PMJJBY.pdf"]
      },
      "nodejs":{
        "files":["nodejs.pdf"]
      },
      "bc":{
        "files":["FAQ_on_BC.pdf"]
      },
      "pmjjby":{
        "files":["PMJJBY.pdf"]
      }
      
    }
  }
}
